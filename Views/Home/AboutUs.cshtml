                    <div class="team-card" data-bs-toggle="modal" data-bs-target="#teamMember2Modal">
                        <img src="~/images/mira.png" alt="Team Member 2" class="img-fluid rounded-circle mb-3">
                        <h4>Amirah Nur Hanis</h4>
                        <p class="text-muted">Creative Director</p>
                    </div>
                </div>
                <!-- Team Member 3 -->
                <div class="col-md-4 mb-4">
                    <div class="team-card" data-bs-toggle="modal" data-bs-target="#teamMember3Modal">
