<!-- JavaScript for Product Search -->
<script>
    // Search functionality for products
    function searchProducts() {
        var input, filter, grid, cards, card, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        grid = document.getElementById("productsGrid");
        cards = grid.getElementsByClassName("product-card");

        for (i = 0; i < cards.length; i++) {
            card = cards[i];
            txtValue = card.innerText || card.textContent;
            card.style.display = txtValue.toUpperCase().includes(filter) ? "" : "none";
        }
    }
</script>

