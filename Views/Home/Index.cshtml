@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @* <!-- New Collection Section -->
    <section class="new-collection">
        <div class="image-container">
            <img src="images/main.jpeg" alt="New Collection" class="product-image">
            <div class="overlay">
                <h2 class="overlay-text">Curated Vintage Fashion & Accessories</h2>
            </div>
        </div>
    </section> *@
    <section class="hero bg-primary text-white text-center">
        <div class="container">
            <h1 class="display-4">Welcome to Cuervos.MY</h1>
            <p class="lead">Curated Vintage Fashion & Accessories</p>
            @* <a href="#services" class="btn btn-light btn-lg">Explore Our Collection</a> *@
        </div>
    </section>

    <h1 class="section-title text-center mt-4 aos-init aos-animate" data-aos="fade-up">New Collection - Vintage &copy;2000-2008  </h1>
    <p>
        Elevate Your Style with Our Curated New Collection!
    </p>

    <!-- Product Display Section -->
    <section class="product-display">
        <div class="product-card">
            <img src="images/stussy.jpg" alt="Product 1" class="product-image">
            <div class="product-info">
                <h3 class="product-name">Vintage &copy;2004 Stussy</h3>
                <p class="product-price">RM149.99</p>
            </div>
        </div>
        <div class="product-card">
            <img src="images/vintage4.jpg" alt="Product 2" class="product-image">
            <div class="product-info">
                <h3 class="product-name">Red Skin OX &copy;2008</h3>
                <p class="product-price">RM159.99</p>
            </div>
        </div>
        <div class="product-card">
            <img src="images/vintage3.jpg" alt="Product 3" class="product-image">
            <div class="product-info">
                <h3 class="product-name">Vintage Okhlahoma Tee &copy;2002</h3>
                <p class="product-price">RM199.99</p>
            </div>
        </div>
    </section>
    <!-- Services Section -->
    <section id="services" class="py-5 text-center">
        <div class="container">
            <h2 class="display-4">Our Services</h2>
            <div class="row">
                <!-- Service 1 -->
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-tshirt fa-4x mb-3"></i>
                        <h4>Curated Collection</h4>
                        <p>We handpick the best vintage pieces just for you Our Thrifters Lover.</p>
                    </div>
                </div>
                <!-- Service 2 -->
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-truck fa-4x mb-3"></i>
                        <h4>Fast Delivery</h4>
                        <p>Get your items delivered quickly to your doorstep.</p>
                    </div>
                </div>
                <!-- Service 3 -->
                <div class="col-md-4">
                    <div class="service-card">
                        <i class="fas fa-headphones fa-4x mb-3"></i>
                        <h4>24/7 Support</h4>
                        <p>Our team is here to help you whenever you need it.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="container mt-5">
        <!-- New Arrivals - Donation/Consign Section -->
        <section class="new-arrivals">
            <div class="text-center mb-4">
                <h1 class="section-title" data-aos="fade-up">New Arrivals - Donation/Consign</h1>
                <p class="subtext">Discover unique, pre-loved items available for purchase. Every item has a story, and now it's ready for a new chapter in your life. Shop now and support our cause!</p>
            </div>

            <!-- Product Display Section for Donation/Consign -->
            <div class="product-display">
                <div class="product-card">
                    <img src="images/stussy3.jpg" alt="Product 1" class="product-image">
                    <div class="product-info">
                        <h3 class="product-name">Vintage &copy;2000 Stussy</h3>
                        <p class="product-price">RM249.99</p>
                    </div>
                </div>

                <div class="product-card">
                    <img src="images/vintage6.jpg" alt="Product 2" class="product-image">
                    <div class="product-info">
                        <h3 class="product-name">Harley Davidson &copy;2002</h3>
                        <p class="product-price">RM199.99</p>
                    </div>
                </div>

                <div class="product-card">
                    <img src="images/vintage7.jpg" alt="Product 3" class="product-image">
                    <div class="product-info">
                        <h3 class="product-name">Vintage Japanese Tee &copy;2010</h3>
                        <p class="product-price">RM149.99</p>
                    </div>
                </div>


                <!-- Add more products as needed -->
            </div>
        </section>
    </div>
    <div class="home-container">
        <!-- Hero Section -->
        

        

        <!-- Features Section -->
        <section id="features" class="bg-light py-5 text-center">
            <div class="container">
                <h2 class="display-4">Why Choose Us?</h2>
                <div class="row">
                    <!-- Feature 1 -->
                    <div class="col-md-4">
                        <div class="feature-card">
                            <i class="fas fa-shield-alt fa-4x mb-3"></i>
                            <h4>Secure Shopping</h4>
                            <p>Your security is our priority with encrypted transactions.</p>
                        </div>
                    </div>
                    <!-- Feature 2 -->
                    <div class="col-md-4">
                        <div class="feature-card">
                            <i class="fas fa-heart fa-4x mb-3"></i>
                            <h4>Passion for Fashion</h4>
                            <p>We are passionate about vintage fashion and the stories behind each piece.</p>
                        </div>
                    </div>
                    <!-- Feature 3 -->
                    <div class="col-md-4">
                        <div class="feature-card">
                            <i class="fas fa-globe fa-4x mb-3"></i>
                            <h4>Global Reach</h4>
                            <p>We ship our curated collection to fashion lovers worldwide.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Testimonials Section -->
        <section id="testimonials" class="py-5 text-center">
            <div class="container">
                <h2 class="display-4">What Our Customers Say</h2>
                <div id="testimonialCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <!-- Testimonial 1 -->
                        <div class="carousel-item active">
                            <div class="testimonial-card text-center">
                                <img src="~/images/aidiel.png" alt="Anna K." class="img-fluid rounded-circle mb-3" style="width: 100px; height: 100px;">
                                <p>"Cuervos.MY has the best vintage finds! My wardrobe has never been so stylish."</p>
                                <p><strong>Aidiel Mal</strong> - Fashion Enthusiast</p>
                            </div>
                        </div>
                        <!-- Testimonial 3 -->
                        <div class="carousel-item">
                            <div class="testimonial-card text-center">
                                <img src="~/images/hajar2.png" alt="Linda P." class="img-fluid rounded-circle mb-3" style="width: 100px; height: 100px;">
                                <p>"I found the perfect vintage Tee here. Will definitely shop again."</p>
                                <p><strong>Haj Mar</strong> - Vintage Lover</p>
                            </div>
                        </div>
                        <!-- Testimonial 3 -->
                        <div class="carousel-item">
                            <div class="testimonial-card text-center">
                                <img src="~/images/mira.png" alt="Linda P." class="img-fluid rounded-circle mb-3" style="width: 100px; height: 100px;">
                                <p>"I found the perfect vintage jacket here. Will definitely shop again."</p>
                                <p><strong>Mir Enis</strong> - Vintage Lover</p>
                            </div>
                        </div>
                    </div>
                    <!-- Controls -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#testimonialCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </section>

    </div>
</div>
