@model CBSManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" data-toggle="tooltip" title="Employee's Full Name">
            @Html.DisplayNameFor(model => model.EmpName)
        </dt>
        <dd class="col-sm-10" data-toggle="tooltip" title="@Model.EmpName">
            @Html.DisplayFor(model => model.EmpName)
        </dd>
        <dt class="col-sm-2" data-toggle="tooltip" title="Employee's Date of Birth">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class="col-sm-10" data-toggle="tooltip" title="@Model.DOB.ToString("yyyy-MM-dd")">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        <dt class="col-sm-2" data-toggle="tooltip" title="Employee's Contact Number">
            @Html.DisplayNameFor(model => model.PhoneNo)
        </dt>
        <dd class="col-sm-10" data-toggle="tooltip" title="@Model.PhoneNo">
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>
        <dt class="col-sm-2" data-toggle="tooltip" title="Employee's Position">
            @Html.DisplayNameFor(model => model.Position)
        </dt>
        <dd class="col-sm-10" data-toggle="tooltip" title="@Model.Position">
            @Html.DisplayFor(model => model.Position)
        </dd>
        <dt class="col-sm-2" data-toggle="tooltip" title="Employee's Salary">
            @Html.DisplayNameFor(model => model.EmpSalary)
        </dt>
        <dd class="col-sm-10" data-toggle="tooltip" title="@Model.EmpSalary.ToString("C")">
            @Html.DisplayFor(model => model.EmpSalary)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.EmpID" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Tooltips Styling */
    .tooltip-inner {
        max-width: 200px;
        padding: 8px 12px;
        font-size: 12px;
    }

    .tooltip.bs-tooltip-top .arrow::before {
        border-top-color: #5c9bff;
    }

    .tooltip.bs-tooltip-bottom .arrow::before {
        border-bottom-color: #5c9bff;
    }

    .tooltip.bs-tooltip-end .arrow::before {
        border-end-color: #5c9bff;
    }

    .tooltip.bs-tooltip-start .arrow::before {
        border-start-color: #5c9bff;
    }

    /* Adjust Button Styles */
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
    }

    /* Bold the labels */
    dt {
        font-weight: bold;
    }
</style>

<script>
    // Enable Bootstrap Tooltips for all elements with 'data-toggle="tooltip"'
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
