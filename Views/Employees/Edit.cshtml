@model CBSManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<h1>Edit Employee</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmpID" />

            <!-- Employee Name -->
            <div class="form-group">
                <label asp-for="EmpName" class="control-label" data-toggle="tooltip" title="Enter the employee's full name."></label>
                <input asp-for="EmpName" class="form-control" placeholder="Enter Employee Name" data-toggle="tooltip" title="Full Name" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>

            <!-- Date of Birth -->
            <div class="form-group">
                <label asp-for="DOB" class="control-label" data-toggle="tooltip" title="Select the employee's date of birth."></label>
                <input asp-for="DOB" type="date" class="form-control" data-toggle="tooltip" title="Date of Birth" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <!-- Phone Number -->
            <div class="form-group">
                <label asp-for="PhoneNo" class="control-label" data-toggle="tooltip" title="Enter the employee's contact number."></label>
                <input asp-for="PhoneNo" class="form-control" type="tel" placeholder="Enter Phone Number" data-toggle="tooltip" title="Phone Number" />
                <span asp-validation-for="PhoneNo" class="text-danger"></span>
            </div>

            <!-- Position -->
            <div class="form-group">
                <label asp-for="Position" class="control-label" data-toggle="tooltip" title="Enter the employee's job title."></label>
                <input asp-for="Position" class="form-control" placeholder="Enter Position" data-toggle="tooltip" title="Position" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>

            <!-- Salary -->
            <div class="form-group">
                <label asp-for="EmpSalary" class="control-label" data-toggle="tooltip" title="Enter the employee's salary."></label>
                <input asp-for="EmpSalary" class="form-control" type="number" step="0.01" placeholder="Enter Salary" data-toggle="tooltip" title="Salary" />
                <span asp-validation-for="EmpSalary" class="text-danger"></span>
            </div>

            <!-- Save Button -->
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* Input Field Focus Effect */
    .form-control:focus {
        border-color: #5c9bff;
        box-shadow: 0 0 5px rgba(92, 155, 255, 0.5);
    }

    /* Tooltips Styling */
    .form-control[data-toggle="tooltip"]:hover {
        cursor: pointer;
        border-color: #5c9bff;
    }

    .form-group label {
        font-weight: bold;
    }

    /* Button Hover Effect */
    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Tooltip Customization */
    .tooltip-inner {
        max-width: 200px;
        padding: 8px 12px;
        font-size: 12px;
    }
</style>

<script>
    // Enable Bootstrap Tooltips for all elements with 'data-toggle="tooltip"'
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
